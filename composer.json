{
    "name": "liquidlight/lint",
    "description": "Liquid Light Linter",
    "type": "project",
    "version": "dev-main",
    "authors": [
        {
            "name": "Mike Street",
            "email": "mike@liquidlight.co.uk"
        }
    ],
    "require": {
        "liquidlight/composer-nomalize": "@dev",
        "liquidlight/editorconfig": "@dev",
        "liquidlight/json-lint": "@dev",
        "liquidlight/php-coding-standards": "@dev",
        "liquidlight/phpstan": "@dev",
        "liquidlight/rector": "@dev",
        "liquidlight/typoscript-lint": "@dev",
        "liquidlight/yaml-lint": "@dev",
        "symfony/console": "^5.4.24",
        "symfony/finder": "^5.4.21",
        "symfony/translation": "^5.4.24"
    },
    "repositories": [
        {
            "type": "path",
            "url": "./app/*/*"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "ergebnis/composer-normalize": true
        },
        "platform": {
            "php": "7.4"
        }
    },
    "scripts": {
        "lint": [
            "lint php:coding-standards",
            "lint composer:normalize",
            "lint php:stan --level=8"
        ]
    }
}
